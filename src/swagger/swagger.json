{
  "openapi": "3.0.0",
  "info": {
    "title": "Cash Machine Mart",
    "description": "This is the back-end api for Cash Machine Mart.",
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/{token}",
      "variables": {
        "token": {
          "description": "Access token",
          "default": ""
        }
      }
    }
  ],
  "paths": {
    "/admins/signin": {
      "post": {
        "tags": ["Admins"],
        "summary": "Sign in an admin.",
        "requestBody": {
          "description": "Admin cridentials",
          "required": true,
          "content": {
            "applicaton/json": {
              "schema": {
                "type": "object",
                "required": ["username", "passwordHash"],
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "passwordHash": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfull sign in.",
            "content": {
              "applicaton/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string"
                        },
                        "userId": {
                          "type": "string"
                        }
                      }
                    },
                    "accessToken": {
                      "type": "string"
                    },
                    "refreshToken": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/invalidInput"
          },
          "404": {
            "$ref": "#/components/responses/userNotFound"
          },
          "500": {
            "$ref": "#/components/responses/internalError"
          }
        }
      }
    },
    "/admin/username": {
      "patch": {
        "summary": "Change admins username. [Must_Be_Auth_As_Admin]",
        "tags": ["Admins"],
        "requestBody": {
          "description": "The new username must be provided",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["newUsername"],
                "properties": {
                  "newUsername": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/success"
          },
          "400": {
            "$ref": "#/components/responses/invalidInput"
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/internalError"
          }
        }
      }
    },
    "/tokens/refresh": {
      "post": {
        "summary": "Refrsh an access token.",
        "tags": ["Tokens"],
        "requestBody": {
          "$ref": "#/components/requestBodies/bothTokens"
        },
        "responses": {
          "200": {
            "description": "Successfull refresh.",
            "content": {
              "applicaton/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/invalidInput"
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/internalError"
          }
        }
      }
    },
    "/tokens/signout": {
      "delete": {
        "summary": "Sign out a user.",
        "tags": ["Tokens"],
        "requestBody": {
          "$ref": "#/components/requestBodies/bothTokens"
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/success"
          },
          "400": {
            "$ref": "#/components/responses/invalidInput"
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/internalError"
          }
        }
      }
    }
  },
  "components": {
    "requestBodies": {
      "bothTokens": {
        "required": true,
        "content": {
          "appliation/json": {
            "schema": {
              "type": "object",
              "required": ["accessToken", "refreshToken"],
              "properties": {
                "accessToken": {
                  "type": "string",
                  "description": "The old access token."
                },
                "refreshToken": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "responses": {
      "success": {
        "description": "Request has been successfully served.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "invalidInput": {
        "description": "An invalid input from the user, like not sending required params.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "unauthorized": {
        "description": "An invalid or missing access token",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "userNotFound": {
        "description": "User to be signed in is not found.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "internalError": {
        "description": "An internal error happened and couldn't serve the request.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
